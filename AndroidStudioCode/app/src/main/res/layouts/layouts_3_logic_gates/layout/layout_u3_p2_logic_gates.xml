<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="COMPUERTAS LÃ“GICAS"
        android:textSize="30sp"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="6"
            android:columnCount="1"
            android:background="@drawable/background_box"
            >
            <CheckBox
                android:id="@+id/cBoxGateA_in1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="0"
                android:checked="false"
                android:theme="@style/colored_checkBox"/>
            <CheckBox
                android:id="@+id/cBoxGateA_in2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginBottom="50dp"
                android:checked="false"
                android:theme="@style/colored_checkBox"/>
            <CheckBox
                android:id="@+id/cBoxGateB_in1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="4"
                android:layout_column="0"
                android:checked="false"
                android:theme="@style/colored_checkBox"/>
            <CheckBox
                android:id="@+id/cBoxGateB_in2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_row="5"
                android:layout_column="0"
                android:checked="false"
                android:theme="@style/colored_checkBox"/>
        </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:rowCount="3"
        android:columnCount="3"
        >
        <ImageView
            android:id="@+id/imgGateA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/and_"
            />
        <ImageView
            android:id="@+id/imgGateB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/and_"

            />
        <ImageView
            android:id="@+id/imgGateC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/and_"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/wire01"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/wire11"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/wire21"
            />
    </GridLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/background_box"
            >
            <CheckBox
                android:id="@+id/cbOutput"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_row="1"
                android:layout_column="0"
                android:enabled="false"
                android:checked="false"
                android:theme="@style/colored_checkBox"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gate A  -  Gate B  -  Gate C"
            android:textSize="20sp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="5sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Spinner
                android:id="@+id/spinnerG1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"
                android:popupBackground="@android:color/white"
                android:scrollbars="none"
                android:spinnerMode="dropdown"
                />
            <Spinner
                android:id="@+id/spinnerG2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"
                android:popupBackground="@android:color/white"
                android:scrollbars="none"
                android:spinnerMode="dropdown"/>
            <Spinner
                android:id="@+id/spinnerG3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"
                android:popupBackground="@android:color/white"
                android:scrollbars="none"
                android:spinnerMode="dropdown" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Conexión de LED"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Color del LED"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/inputSystemLedColor"
        android:layout_width="150dp"
        android:layout_height="40sp"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="277dp"
        android:layout_height="217dp"
        app:srcCompat="@drawable/led_img" />

    <LinearLayout
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="I=   "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/intensityInput"
            android:layout_width="124dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:inputType="number|numberDecimal"
            android:textSize="20sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="[A]"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="205dp"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Vs= "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tensionInput"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number|numberDecimal"
            android:textSize="20sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="[V]"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="R=  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/resistanceOutput"
            android:layout_width="126dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="[Ω]"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Vd="
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ledTensionOutput"
            android:layout_width="126dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="[V]"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>